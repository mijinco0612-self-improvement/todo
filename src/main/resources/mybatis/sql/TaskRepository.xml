<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.mijinco0612selfimprovement.todo.repository.TaskRepository">

<insert id="register" useGeneratedKeys="true" keyProperty="id">
    INSERT INTO
    task (title, details, finished)
    VALUES
    (#{title}, #{details}, #{finished})
</insert>
<select id="find" resultType="com.mijinco0612selfimprovement.todo.model.Task">
    SELECT
    task_id,
    title,
    details,
    finished
    FROM
    task
    WHERE
    task_id = #{id}
</select>

<select id="findAll" resultType="com.mijinco0612selfimprovement.todo.model.Task">
    SELECT
    task_id,
    title,
    details,
    finished
    FROM
    task
</select>
</mapper>